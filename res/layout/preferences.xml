<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="4"
        >

    <TextView
            android:text="Gamer Information"
            android:textSize="32dip"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            />

    <TextView
            android:text="You can edit your information here:"
            android:textSize="16dip"
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <TextView android:text="First Name"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_columnSpan="2"
              android:layout_height="wrap_content"
              android:id="@+id/textView"/>
    <EditText android:ems="10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnSpan="2"
              android:id="@+id/etFirst"/>

    <TextView android:text="Last Name"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_columnSpan="2"
              android:layout_height="wrap_content"
              android:id="@+id/etLast"/>
    <EditText android:ems="10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnSpan="2"
              android:id="@+id/editText2"/>

    <TextView
            android:text="Email address:"
            android:layout_columnSpan="2"
            android:layout_gravity="right"
            />
    <EditText android:layout_columnSpan="2"
              android:ems="10"
              android:id="@+id/etEmail"
            />

    <TextView
            android:text="Password:"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_gravity="right"
            />
    <EditText
            android:layout_columnSpan="2"
            android:ems="10"
            android:id="@+id/etPassword"
            android:inputType="textPassword"/>

    <TextView
            android:text="XP: "
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:id="@+id/txXP"
            />
    <TextView
            android:text="Level: "
            android:layout_columnSpan="1"
            android:layout_column="2"
            android:layout_gravity="left"
            android:id="@+id/txLevel"
            />
    <TextView
            android:text="Coins: "
            android:layout_columnSpan="1"
            android:layout_column="3"
            android:layout_gravity="left"
            android:id="@+id/txCoins"
            />

    <TextView
            android:text="Online: "
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:id="@+id/txOnline"
            />
    <TextView
            android:text="Available: "
            android:layout_columnSpan="1"
            android:layout_column="2"
            android:layout_gravity="left"
            android:id="@+id/txAvailable"
            />
    <TextView
            android:text="Gaming: "
            android:layout_columnSpan="1"
            android:layout_column="3"
            android:layout_gravity="left"
            android:id="@+id/txGaming"
            />
    <TextView
            android:text="Won: "
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:id="@+id/txWon"
            />
    <TextView
            android:text="Lost: "
            android:layout_columnSpan="1"
            android:layout_column="2"
            android:layout_gravity="left"
            android:id="@+id/txLost"
            />
    <TextView
            android:text="Tied: "
            android:layout_columnSpan="1"
            android:layout_column="3"
            android:layout_gravity="left"
            android:id="@+id/txTied"
            />

    <Space
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            />

    <Button
            android:text="Save"
            android:layout_row="11"
            android:layout_column="3"
            android:onClick="savePrefsOnClick"/>
</GridLayout>
